<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/add_words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Add to Words"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/query_words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Query from Words"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/update_words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Update Words"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/delete_words"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Delete from Words"
        android:textAllCaps="false"/>
    <EditText
        android:id="@+id/query_ans"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:focusableInTouchMode="false"
        android:focusable="false" />
</LinearLayout>